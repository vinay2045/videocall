<%- include('../partials/header') %>
<%- include('../partials/navbar', { user }) %>
<main class="app-container">
  <aside class="sidebar">
    <div class="sidebar-header">
      <h2><%= user.role === 'client' ? 'Agencies' : 'Clients' %></h2>
      <div class="status-dot legend online"></div><span class="legend-text">Online</span>
      <div class="status-dot legend offline"></div><span class="legend-text">Offline</span>
    </div>
    <ul id="user-list" class="user-list" aria-live="polite"></ul>
  </aside>

  <section class="main">
    <div class="video-grid" id="video-grid" aria-live="polite">
      <!-- Dynamic call tiles injected here -->
    </div>
  </section>
</main>

<script>
  window.__APP_USER__ = { _id: '<%= user._id %>', name: '<%= user.name %>', role: '<%= user.role %>' };
</script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/app.js"></script>
<%- include('../partials/footer') %>
